{
  "name": "timesheet",
  "version": "1.0.0",
  "description": "A modern timesheet management system replacing the legacy PowerApps solution. Built with Flask, vanilla JavaScript/CSS, and PostgreSQL for ~60 Northstar employees and trainees.",
  "main": "index.js",
  "directories": {
    "doc": "docs",
    "test": "tests"
  },
  "scripts": {
    "test": "pytest tests/ -v",
    "test:e2e": "npx playwright test",
    "test:e2e:ui": "npx playwright test --ui",
    "test:e2e:headed": "npx playwright test --headed",
    "test:e2e:debug": "npx playwright test --debug",
    "test:e2e:report": "npx playwright show-report",
    "test:e2e:docker": "docker run --rm --network=host -v $(pwd):/work -w /work mcr.microsoft.com/playwright:v1.57.0-noble npx playwright test",
    "playwright:install": "npx playwright install chromium"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Northstar-Technologies/timesheet.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Northstar-Technologies/timesheet/issues"
  },
  "homepage": "https://github.com/Northstar-Technologies/timesheet#readme",
  "devDependencies": {
    "@playwright/test": "^1.57.0"
  }
}
